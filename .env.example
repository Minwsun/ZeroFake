# ZeroFake Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Groq API - For Llama models (primary)
# Get your key at: https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google AI Studio - For Gemini/Gemma models (fallback)
# Get your key at: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# OpenWeather API - For weather verification
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# OPTIONAL API KEYS (for additional fallback)
# =============================================================================

# Cerebras API - For high-speed inference (optional)
# Get your key at: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Additional Groq API keys for rate limit handling (optional)
# Add multiple keys separated by rotation
GROQ_API_KEY_2=gsk_your_second_groq_key_here
GROQ_API_KEY_3=gsk_your_third_groq_key_here

# Additional Gemini API keys (optional)
GEMINI_API_KEY_2=your_second_gemini_key_here
GEMINI_API_KEY_3=your_third_gemini_key_here

# =============================================================================
# SERVER CONFIGURATION (optional)
# =============================================================================

# Server host and port
HOST=127.0.0.1
PORT=8000

# Debug mode (set to false in production)
DEBUG=true
